{
	"name": "openfga-vscode",
	"displayName": "OpenFGA",
	"description": "Language support for OpenFGA authorization models",
	"author": "OpenFGA",
	"icon": "./resources/openfga-icon-color.png",
	"keywords": [
		"openfga",
		"authorization",
		"fga",
		"fine-grained-authorization",
		"rebac",
		"zanzibar"
	],
	"license": "Apache-2.0",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/openfga/vscode-ext"
	},
	"bugs": {
		"url": "https://github.com/openfga/vscode-ext/issues"
	},
	"homepage": "https://github.com/openfga/vscode-ext#readme",
	"publisher": "openfga",
	"categories": [],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/dist/extension",
	"contributes": {
		"languages": [
			{
				"id": "openfga",
				"aliases": [
					"OpenFGA",
					"openfga"
				],
				"extensions": [
					".fga",
					".openfga"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "openfga",
				"path": "./snippets.json"
			}
		],
		"grammars": [
			{
				"language": "openfga",
				"scopeName": "source.openfga",
				"path": "./syntaxes/openfga.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "OpenFGA Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/openfga-dark.json"
			}
		],
		"commands": [
			{
				"command": "openfga.commands.transformToJson",
				"title": "OpenFGA: Transform DSL to JSON"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "openfga.commands.transformToJson",
					"when": "editorLangId == openfga"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile": "rm -rf client/out && tsc -b",
		"test": "sh ./scripts/e2e.sh",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"eslint": "^8.39.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.4",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	}
}
