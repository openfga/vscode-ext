{
	"name": "openfga-vscode",
	"description": "Language support for OpenFGA authorization models",
	"author": "OpenFGA",
	"keywords": [
		"openfga",
		"authorization",
		"fga",
		"fine-grained-authorization",
		"rebac",
		"zanzibar"
	],
	"license": "Apache-2.0",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com:openfga/openfga-vscode"
	},
	"bugs": {
		"url": "https://github.com/openfga/openfga-vscode/issues"
	},
	"homepage": "https://github.com/openfga/openfga-vscode#readme",
	"publisher": "openfga",
	"categories": [],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "openfga",
				"aliases": [
					"OpenFGA",
					"openfga"
				],
				"extensions": [
					".fga",
					".openfga"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "openfga",
				"scopeName": "source.openfga",
				"path": "./syntaxes/openfga.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "OpenFGA Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/openfga-dark.json"
			}
		],
		"commands": [
			{
				"command": "openfga.commands.transformToJson",
				"title": "OpenFGA: Transform DSL to JSON"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "openfga.commands.transformToJson",
					"when": "editorLangId == openfga"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "rm -rf client/out && tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"eslint": "^8.39.0",
		"mocha": "^10.2.0"
	}
}
